    {
      "name": "Notes",
      "item": [
        {
          "name": "Get All Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer <token>"
              }
            ],
            "url": {
              "raw": "http://localhost:5001/api/notes",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "5001",
              "path": [
                "api",
                "notes"
              ]
            }
          }
        },
        {
          "name": "Search Notes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer <token>"
              }
            ],
            "url": {
              "raw": "http://localhost:5001/api/notes?q=search term&tag=tag1",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "5001",
              "path": [
                "api",
                "notes"
              ],
              "query": [
                {
                  "key": "q",
                  "value": "search term"
                },
                {
                  "key": "tag",
                  "value": "tag1"
                }
              ]
            }
          }
        },
        {
          "name": "Create Note",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer <token>"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My Note\",\n  \"content\": \"Note content\",\n  \"tags\": [\"tag1\", \"tag2\"]\n}"
            },
            "url": {
              "raw": "http://localhost:5001/api/notes",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "5001",
              "path": [
                "api",
                "notes"
              ]
            }
          }
        },
        {
          "name": "Update Note",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer <token>"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"content\": \"Updated content\",\n  \"tags\": [\"updated\"]\n}"
            },
            "url": {
              "raw": "http://localhost:5001/api/notes/{{noteId}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "5001",
              "path": [
                "api",
                "notes",
                "{{noteId}}"
              ]
            }
          }
        },
        {
          "name": "Delete Note",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer <token>"
              }
            ],
            "url": {
              "raw": "http://localhost:5001/api/notes/{{noteId}}",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "5001",
              "path": [
                "api",
                "notes",
                "{{noteId}}"
              ]
            }
          }
        }
      ]
    }
  ]
